
@{
    ViewBag.Title = "Blog";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

@Html.Partial("BreadcrumbsPartial", "Shared")
<section class="blog_area single-post-area section_gap">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 posts-list">
                <div class="single-post row">
                    
                    <div class="col-lg-12 col-md-12 blog_details">
                        <div class="blog-phandau">
                            <h2>@Model.Title</h2>
                            <div class="blog-trangthai">
                                <ul>
                                    <li>@Model.Date</li>
                                    <li><a href="#">0 comments</a></li>
                                </ul>
                            </div>
                        </div>
                        <p class="excert">
                            @Model.ContentDM
                        </p>
                        <div class="col-lg-12">
                            <div class="feature-img">
                                <img class="img-fluid" src="/Content/img/@Url.Content(Model.Image)" alt="">
                            </div>
                        </div>
                        <p>
                            @Model.ContentDetail
                        </p>

                    </div>

                </div>

                <div class="comment-form">
                    <h4>Leave a Reply</h4>
                    <form>
                        <div class="form-group form-inline">
                            <div class="form-group col-lg-6 col-md-6 name">
                                <input type="text" class="form-control" id="name" placeholder="Enter Name" onfocus="this.placeholder = ''"
                                       onblur="this.placeholder = 'Enter Name'">
                            </div>
                            <div class="form-group col-lg-6 col-md-6 email">
                                <input type="email" class="form-control" id="email" placeholder="Enter email address"
                                       onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter email address'">
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" id="subject" placeholder="Subject" onfocus="this.placeholder = ''"
                                   onblur="this.placeholder = 'Subject'">
                        </div>
                        <div class="form-group">
                            <textarea class="form-control mb-10" rows="5" name="message" placeholder="Messege"
                                      onfocus="this.placeholder = ''" onblur="this.placeholder = 'Messege'" required=""></textarea>
                        </div>
                        <a href="#" class="primary-btn submit_btn">Post Comment</a>
                    </form>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="blog_right_sidebar">
                    <aside class="single_sidebar_widget search_widget">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search Posts" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Search Posts'">
                            <span class="input-group-btn">
                                <button class="btn btn-default" type="button"><i class="lnr lnr-magnifier"></i></button>
                            </span>
                        </div><!-- /input-group -->
                        <div class="br"></div>
                    </aside>

                    @Html.Action("BlogInfoPartial", "Blog")


                </div>
            </div>
        </div>
    </div>
</section>

